
<html> 
<head> 
  <title>HBBatchBeast Status</title>
  <meta http-equiv="x-ua-compatible" content="IE=9" />
  <HTA:APPLICATION ID="HBBatchBeast Status" APPLICATIONNAME="HBBatchBeast Status" BORDER="DIALOG" BORDERSTYLE="normal" CAPTION="yes" ICON="rocket.ico" MAXIMIZEBUTTON="yes" MINIMIZEBUTTON="yes" SCROLL="auto" scrollFlat="yes" SHOWINTASKBAR="yes" SINGLEINSTANCE="yes" SYSMENU="yes" VERSION="1.0" Navigable="yes" WINDOWSTATE="normal" />
  
  <script type="text/javascript"> 

   window.onload = function() {

    window.resizeTo(800, 500);

  }

  var fso = new ActiveXObject("Scripting.FileSystemObject"); 


  window.setInterval("readFiles();", 2000);

var previousNumberFilesFound =0;
var currentNumberFilesFound =0;



  function readFiles() {


    

    try{
     var tFF2 = fso.OpenTextFile("./Config/totalFilesFound.txt", 1, true);

     var currentNumberFilesFound = tFF2.ReadLine();
     tFF2.Close();
     
     document.getElementById("totalFilesFound").value = currentNumberFilesFound;

     if(currentNumberFilesFound !=previousNumberFilesFound){

previousNumberFilesFound= currentNumberFilesFound;

     }else{
window.close();

     }
     
     


     var uFF2 = fso.OpenTextFile("./Config/unconvertedFilesFound.txt", 1, true);
     
     document.getElementById("unconvertedFilesFound").value = uFF2.ReadLine();
     
     uFF2.Close();
         
                  }catch(err){}

                }
                  
                  
                </script>

                <style>
                




              </style>
            </head>
            
            <body> 
              <center>
                

                <p>Total number of media files found:<input type="text"  id="totalFilesFound" ></p>
                <p>Number of unconverted media files found(files which don't exist in destination folders):<input type="text"  id="unconvertedFilesFound" ></p>



                  <p>This window is just to show how many files have been found when scanning large folders. Close it whenever you like.</p>

                

                
                





              </center>
              
              
              </html>
